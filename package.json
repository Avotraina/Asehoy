{
  "name": "bible-verse-projector",
  "version": "1.0.0",
  "description": "Electron app for projecting Bible verses",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:tsc": "tsc -p tsconfig.main.json --watch",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:tsc && npm run build:vite",
    "build:tsc": "tsc -p tsconfig.main.json",
    "build:vite": "vite build",
    "start": "electron .",
    "migrate": "ts-node database/example.ts"
  },
  "keywords": [
    "electron",
    "bible",
    "projector"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.13.0",
    "@emotion/styled": "^11.13.0",
    "@mui/material": "^5.16.0",
    "axios": "^1.7.0",
    "better-sqlite3": "^12.5.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-hook-form": "^7.70.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "electron": "^39.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vite": "^6.0.0",
    "wait-on": "^8.0.0"
  },
  "type": "module"
}